<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_radius_20_blue_primary"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:padding="4dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img_description"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        android:elevation="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/img_my_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_avatar" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Nguyen Hai Vinh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="start|center"
                android:textSize="18sp"
                tools:text="Create At :" />

            <TextView
                android:id="@+id/tv_create_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="12-12-2022" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_detail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_radius_20"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:elevation="10dp"
        android:paddingStart="10dp"
        android:text="view detail"
        android:textColor="@color/orange" />
</LinearLayout>