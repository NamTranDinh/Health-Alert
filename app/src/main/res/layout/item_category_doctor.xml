<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="100dp"
    android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/cb_check_type"
        android:visibility="gone"
        android:checked="true"
        android:gravity="center"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        android:buttonTint="@color/white"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/nav_home_category_items_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_radius_20"
        android:gravity="center"

        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/category_doctor_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_launcher_round" />

        <TextView
            android:id="@+id/category_doctor_type"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Dentist"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>